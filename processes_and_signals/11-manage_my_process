#!/usr/bin/env bash
# Init script to manage manage_my_process

PIDFILE="/var/run/my_process.pid"

start_process() {
    ./manage_my_process &
    echo "$!" > "$PIDFILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ -e "$PIDFILE" ]; then
        pid=$(cat "$PIDFILE")
        kill "$pid"
        rm "$PIDFILE"
    fi
    echo "manage_my_process stopped"
}

case "$1" in 
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0